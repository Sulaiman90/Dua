<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:descendantFocusability="beforeDescendants">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:cardCornerRadius="4dp">

     <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="48dp">

             <TextView
                 android:id="@+id/txtDuaNumber"
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:gravity="center"
                 android:paddingBottom="5dp"
                 android:paddingTop="5dp"
                 android:text="1"
                 android:textColor="@color/colorPrimary"
                 android:textSize="18sp"
                 android:textStyle="bold" />

             <com.mikepenz.iconics.view.IconicsButton
                 android:id="@+id/fav_btn"
                 android:layout_width="48dp"
                 android:layout_height="48dp"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 android:text="{faw-star-o}"
                 android:textColor="@color/black"
                 android:textSize="24sp"
                 />

             <com.mikepenz.iconics.view.IconicsButton
                 android:id="@+id/share_btn"
                 android:layout_width="48dp"
                 android:layout_height="48dp"
                 android:layout_centerVertical="true"
                 android:layout_toLeftOf="@+id/fav_btn"
                 android:background="?attr/selectableItemBackgroundBorderless"
                 android:text="{gmd-share}"
                 android:textAllCaps="false"
                 android:textColor="@color/black"
                 android:textSize="24sp"
                 />

         </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@color/card_divider_gray" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:id="@+id/arabic_layout"
             >

             <TextView
                 android:id="@+id/txtDuaArabic"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:lineSpacingExtra="15dp"
                 android:paddingTop="10dp"
                 android:text="Arabic Dua"
                 android:textColor="@color/black"
                 android:textSize="24sp" />

             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_marginLeft="1dp"
                 android:layout_marginRight="1dp"
                 android:background="@color/card_divider_gray" />

             <TextView
                 android:id="@+id/txtDuaArabicRef"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:lineSpacingExtra="15dp"
                 android:paddingTop="10dp"
                 android:text="Arabic Dua Reference"
                 android:textColor="@color/black"
                 android:textSize="24sp"
                 />

         </LinearLayout>

         <View
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:layout_marginLeft="1dp"
             android:layout_marginRight="1dp"
             android:id="@+id/layout_divider"
             android:background="@color/card_divider_gray" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:id="@+id/translation_layout"
             >

             <TextView
                 android:id="@+id/txtDuaTranslation"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:paddingBottom="15dp"
                 android:paddingTop="15dp"
                 android:text="Dua Translation"
                 android:textColor="@color/black"
                 android:textSize="16sp" />

             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_marginLeft="1dp"
                 android:layout_marginRight="1dp"
                 android:background="@color/card_divider_gray" />

             <TextView
                 android:id="@+id/txtDuaTranslationReference"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:paddingBottom="15dp"
                 android:paddingTop="15dp"
                 android:text="Dua Reference"
                 android:textColor="@color/black"
                 android:textSize="16sp" />

         </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>

