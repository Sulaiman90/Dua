<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/content_dua_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.salsabeel.dua.DuaDetailActivity"
    tools:showIn="@layout/activity_dua_detail">

    <ListView
        android:id="@+id/duaDetailListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:divider="@null"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:paddingBottom="@dimen/duaListView_padding_bottom"
        android:paddingTop="@dimen/duaListView_padding_top"
        android:scrollbarStyle="outsideOverlay" />

</RelativeLayout>
